{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "api",
    "module": "CommonJS",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
