{
  "compilerOptions": {
    "outDir": "dist", // Output compiled files to 'dist' folder
    "module": "CommonJS", // Ensure compatibility with Node.js
    "target": "ES6", // Use ES6 for modern features
    "rootDir": "api", // Specify the root folder
    "strict": true, // Enable strict mode
    "esModuleInterop": true, // Ensure compatibility with CommonJS modules
    "resolveJsonModule": true, // Allow importing JSON files
    "skipLibCheck": true, // Skip type checking of declaration files
    "sourceMap": true // Generate source maps (useful for debugging)
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
